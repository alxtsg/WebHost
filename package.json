{
  "name": "webhost",
  "version": "6.0.3",
  "author": "alextsang@live.com",
  "description": "A simple web server.",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org:alxtsg/webhost.git"
  },
  "license": "BSD-3-Clause",
  "homepage": "https://bitbucket.org/alxtsg/webhost/",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist/",
    "copy-env": "copyfiles -u 1 src/.env.template dist",
    "copy-package-json": "copyfiles package*.json dist",
    "copy-test-web": "copyfiles -u 2 src/tests/web/* dist/tests",
    "build-test": "tsc && npm run copy-env && npm run copy-package-json && npm run copy-test-web",
    "build-release": "tsc && npm run copy-env && npm run copy-package-json",
    "pretest": "node tests/setup.js",
    "test": "mocha --recursive --exclude tests/setup.js tests/**/*.test.js"
  },
  "dependencies": {
    "dotenv": "^8.2.0"
  },
  "devDependencies": {
    "@tsconfig/node12": "^1.0.7",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.0.1",
    "copyfiles": "^2.4.1",
    "mocha": "^8.3.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.2.4"
  }
}
